<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSaltanov.Resources.Styles.StylesSaltanov">

    <Style TargetType="Button" x:Key="ButtonStyleBase">
        <Setter Property="TextColor" Value="Yellow" />
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyleBase}" x:Key="ButtonStyle1">
        <Setter Property="CornerRadius" Value="50"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="Red"/>
        <Setter Property="Padding" Value="15"/>
    </Style>


    <Style TargetType="Label" x:Key="LabelStyleBase">
        <Setter Property="TextColor" Value="Black"/>
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource LabelStyleBase}" x:Key="LabelStyle1">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Frame" x:Key="FrameStyle1">
        <Setter Property="Padding" Value="10, 5"/>
        
    </Style>

</ResourceDictionary>